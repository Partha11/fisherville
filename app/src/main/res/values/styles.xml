<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textbox_selector</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#006295</item>
    </style>

    <style name="ToolbarTheme" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/open_sans_r</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="android:windowExitAnimation">@anim/pop_off</item>
    </style>

</resources>
